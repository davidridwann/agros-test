    <script>
        $('#dataTable').on('click', '.show-btn', function() {
            let id = $(this).data('id');
            let name = $(this).data('name');
            let phone = $(this).data('phone');
            let address = $(this).data('address');
            let photo = $(this).data('photo');
    
            $('#showModal').modal('show');
    
            $('.id').val(id);
            $('.name').val(name);
            $('.phone').val(phone);
            $('.address').val(address);
            $('#imagePreview').attr('src', 'upload/driver-photos/' + photo);
        });

        $('#dataTable').on('click', '.edit-btn', function() {
            let id = $(this).data('id');
            let name = $(this).data('name');
            let phone = $(this).data('phone');
            let address = $(this).data('address');
            let photo = $(this).data('photo');
    
            $('#editModal').modal('show');
    
            $('.id').val(id);
            $('.name').val(name);
            $('.phone').val(phone);
            $('.address').val(address);
            $('#current_photo').val(photo);
        });
    </script>

